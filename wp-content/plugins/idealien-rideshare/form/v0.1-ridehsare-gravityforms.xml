<?xml version="1.0" encoding="UTF-8"?>
<forms version="1.5.3">
	<form labelPlacement="top_label" useCurrentUserAsAuthor="1" postAuthor="2" postCategory="1" postStatus="publish">
		<title><![CDATA[Rideshare Form]]></title>
		<description><![CDATA[Got a ride? Need a ride? Give a ride, get a ride! The best road trips are the ones where you make new friends. What better way to enjoy getting from A to B than getting to know someone and helping smog the planet just a little bit less at the same time.]]></description>
		<confirmation type="message">
			<message><![CDATA[Thanks for posting your rideshare! ]]></message>
		</confirmation>
		<button type="text">
			<text><![CDATA[Submit]]></text>
		</button>
		<fields>
			<field adminOnly="1" allowsPrepopulate="1" id="6" size="medium" type="post_title">
				<inputName><![CDATA[idealien_rideshare_postTitle]]></inputName>
				<label><![CDATA[Post Title]]></label>
				<saveAsCPT><![CDATA[idealien_rideshare]]></saveAsCPT>
			</field>
			<field allowsPrepopulate="1" id="5" isRequired="1" size="medium" type="post_custom_field" postCustomFieldName="idealien_rideshare_type" inputType="select">
				<inputName><![CDATA[rideshare_type]]></inputName>
				<label><![CDATA[Rideshare Type]]></label>
				<choices>
					<choice>
						<text><![CDATA[Dynamic Population]]></text>
					</choice>
				</choices>
			</field>
			<field id="8" isRequired="1" size="medium" type="post_custom_field" postCustomFieldName="idealien_rideshare_spaces" inputType="number" rangeMin="1">
				<label><![CDATA[Number of spaces available / required]]></label>
			</field>
			<field allowsPrepopulate="1" id="7" size="medium" type="post_custom_field" postCustomFieldName="idealien_rideshare_event" inputType="select">
				<inputName><![CDATA[idealien_rideshare_event]]></inputName>
				<label><![CDATA[Event]]></label>
				<choices>
					<choice>
						<text><![CDATA[Dynamic Population]]></text>
					</choice>
					<choice>
						<text><![CDATA[Add New Event]]></text>
					</choice>
				</choices>
			</field>
			<field id="18" type="text" size="medium">
				<label><![CDATA[Add New Event]]></label>
				<conditionalLogic actionType="show" logicType="all">
					<rules>
						<rule fieldId="7" operator="is">
							<value><![CDATA[Add New Event]]></value>
						</rule>
					</rules>
				</conditionalLogic>
			</field>
			<field allowsPrepopulate="1" id="9" isRequired="1" size="medium" type="post_custom_field" postCustomFieldName="idealien_rideshare_departureCity" inputType="select">
				<inputName><![CDATA[idealien_rideshare_departureCity]]></inputName>
				<label><![CDATA[Departure City]]></label>
				<choices>
					<choice>
						<text><![CDATA[Dynamic Population]]></text>
					</choice>
					<choice>
						<text><![CDATA[Add New City]]></text>
					</choice>
				</choices>
			</field>
			<field id="17" size="medium" type="text">
				<label><![CDATA[Add New City]]></label>
				<conditionalLogic actionType="show" logicType="all">
					<rules>
						<rule fieldId="9" operator="is">
							<value><![CDATA[Add New City]]></value>
						</rule>
					</rules>
				</conditionalLogic>
			</field>
			<field id="10" size="medium" type="post_custom_field" postCustomFieldName="idealien_rideshare_departureDate" inputType="date" calendarIconType="calendar">
				<label><![CDATA[Preferred Departure Date]]></label>
			</field>
			<field id="11" size="medium" type="post_custom_field" postCustomFieldName="idealien_rideshare_returnDate" inputType="date" calendarIconType="calendar">
				<label><![CDATA[Preferred Return Date]]></label>
			</field>
			<field id="12" size="medium" type="section" displayOnly="1">
				<description><![CDATA[Only provide the fields of info that you would like to be available through the website for people to contact you by.]]></description>
				<label><![CDATA[Contact Information]]></label>
			</field>
			<field id="13" isRequired="1" size="medium" type="post_custom_field" postCustomFieldName="idealien_rideshare_name" inputType="text">
				<label><![CDATA[Name]]></label>
			</field>
			<field id="14" isRequired="1" size="medium" type="post_custom_field" postCustomFieldName="idealien_rideshare_email" inputType="email">
				<label><![CDATA[Email Address]]></label>
			</field>
			<field id="15" size="medium" type="post_custom_field" postCustomFieldName="idealien_rideshare_phone" inputType="phone" phoneFormat="standard">
				<label><![CDATA[Phone Number]]></label>
			</field>
			<field id="16" size="medium" type="post_custom_field" postCustomFieldName="idealien_rideshare_addInfo" inputType="textarea">
				<description><![CDATA[Any other info you'd like the rideshare(r) or rideshare(e) to know about your ride request?]]></description>
				<label><![CDATA[Additional Info]]></label>
			</field>
		</fields>
		<cssClass><![CDATA[idealien_rideshare_gf]]></cssClass>
		<notification>
			<subject><![CDATA[New submission from {form_title}]]></subject>
			<message><![CDATA[{all_fields}]]></message>
			<from><![CDATA[jamie@idealienstudios.com]]></from>
		</notification>
		<autoResponder>
			<from><![CDATA[jamie@idealienstudios.com]]></from>
		</autoResponder>
	</form>
</forms>